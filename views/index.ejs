<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Blog</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<br>

        <nav>
            <a href="/">Home</a>
            <header>
                <h1>My Blog</h1>
            </header>
            <a href="/posts/new">Create New Post</a>
        </nav>
        
        <div class="container">
        <h2>Blog Posts</h2>
        <% posts.forEach(post => { %>
            <div class="post-preview">
                <h2><a href="/posts/<%= post._id %>"><%= post.title %></a></h2>
                <p><%= post.content.substring(0, 111) %>...</p>
                <form action="/posts/<%= post._id %>/delete" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </div>
        <% }) %>
    </div>
    <footer>
        <p>&copy; 2024 Adithya Mittapally</p>
    </footer>
</body>
</html>
